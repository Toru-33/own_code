{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug OpenDP",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/opendp",
            "args": [
                "-lef",
                "${cellLef}", //cell_lef
                "-def",
                "${defFile}", //def_file
                "-cpu",
                "4", //num_threads
                "-output",
                "test.def" //output_file
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "variables": {
                "cellLef": "${workspaceFolder}/bench/iccad2014/b19/techlib.mr.lef",
                "defFile": "${workspaceFolder}/bench/iccad2014/b19/b19_lg.def",
            }
        }
    ],
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/opendp"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}